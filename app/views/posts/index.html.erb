<div class="row">
  <div class="col-md-3">
    <div class="card">
      <%= link_to user_path(current_user), class: "card-body" do%>
          <div class="h5"><%= "#{current_user.first_name} #{current_user.last_name}" %></div>
          <div class="h7 text-muted"><%= "#{current_user.email}" %></div>          
      <% end %>
      <ul class="list-group list-group-flush">
          <li class="list-group-item">
              <div class="h6 text-muted">Friends</div>
              <div class="h5">5.2342</div>
          </li>
          <li class="list-group-item">
            <%= link_to  "Edit Profile", edit_user_path(current_user)%>
          </li>
      </ul>
  </div>
</div>

<div class="col-md-6 gedf-main">
  <%= render 'form', post: @post %>
  <!-- CREATE Post /////-->

  <!--- \\\\\\\Posts-->
  <% @posts.each do |post| %>

    <div class="card gedf-card">
      <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
              <%= link_to users_url(post.user), class: "d-flex justify-content-between align-items-center" do%>
                <div class="mr-2">
                    <%= gravatar_tag post.user.email, :size => 45, :html => { :class => "img rounded-circle" } %>
                </div>
                <div class="ml-2">
                    <div class="h5 m-0">
                      <%= "by #{post.user.first_name} #{post.user.last_name}" %>
                    </div>
                    <div class="h7 text-muted">
                      <%= "#{post.user.email}" %>
                    </div>
                </div>
              <% end %>
              <div>
                  <div class="dropdown">
                      <button class="btn dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          ‚ãÆ
                      </button>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                          <div class="h6 dropdown-header">More</div>
                          <%= link_to 'Edit', edit_post_path(post), class: "dropdown-item" %>
                          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"dropdown-item" %>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <% if post.image_path %>
        <%= link_to post do %>
          <img class="card-img-top" src="<%= post.image_path%>" alt="image">
        <% end %>
      <% end %>
      <div class="card-body">
          <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i><%= post.updated_at.to_time.strftime('%B %e at %l:%M %p') %></div>
          <p class="card-text">
              <%= post.body %>
          </p>
      </div>
      <div class="card-footer d-flex">
          
          <%= button_to like_post_url(user_id: current_user.id, id: post.id), class: 'btn round card-link' do%>
            üëç
            <sup class="card-link"><%= post.likes.from_post(post.id).count %></sup>
          <% end %>

          <%= link_to post, class: "btn round card-link" do %>
            &#128172;
            <sup class="card-link"><%= post.comments.count %></sup>
          <% end %>
      </div>
    </div>

  <% end %>
</div>

